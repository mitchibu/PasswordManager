<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>
		<import type="jp.gr.java_conf.mitchibu.passwordmanager.model.dao.AccountView"/>
		<import type="jp.gr.java_conf.mitchibu.passwordmanager.ui.view.OnItemClickListener"/>
		<variable
			name="account"
			type="AccountView"/>
		<variable
			name="position"
			type="int"/>
		<variable
			name="listener"
			type="OnItemClickListener"/>
	</data>
	<android.support.v7.widget.CardView
		app:cardUseCompatPadding="true"
		app:cardCornerRadius="@dimen/card_corner"
		android:onClick="@{view -> listener.onItemClick(view, account)}"
		android:foreground="?android:attr/selectableItemBackground"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<android.support.constraint.ConstraintLayout
			android:layout_margin="@dimen/card_corner"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toTopOf="@id/title"
				android:id="@+id/category"
				android:textAppearance="?attr/textAppearanceListItem"
				android:text="@{account.category.name}"
				android:layout_width="0dp"
				android:layout_height="wrap_content"/>
			<TextView
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@id/category"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toTopOf="@id/name"
				android:id="@+id/title"
				android:textAppearance="?attr/textAppearanceListItem"
				android:text="@{account.account.title}"
				android:layout_width="0dp"
				android:layout_height="wrap_content"/>
			<TextView
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@id/title"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				android:id="@+id/name"
				android:textAppearance="?attr/textAppearanceListItemSecondary"
				android:text="@{account.account.name}"
				android:layout_width="0dp"
				android:layout_height="wrap_content"/>
		</android.support.constraint.ConstraintLayout>
	</android.support.v7.widget.CardView>
</layout>